.button
    &__utilities
        bottom 0%
        z-index 1500
        opacity 70%

    &__headerMenu
        background-color rgb(52, 125, 209) !important
        color white
        transition all 0.3s ease-in-out

        &:hover
            background-color #0053b3 !important
            color white

        &:active
            background-color #003470 !important
            color white

        &--active
            background-color #3895ff !important
            color white